{
  "name": "techishthoughts",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "A modern multi-author tech blog with advanced search and text-to-speech features",
  "keywords": [
    "blog",
    "tech",
    "hugo",
    "react",
    "typescript",
    "multi-author"
  ],
  "author": "Tech.ish Thoughts Community",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "watch": "vite build --watch",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:local": "./scripts/test-e2e-local.sh",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "hugo:dev": "hugo server -D --port 1313 --bind 127.0.0.1",
    "hugo:build": "hugo --minify",
    "build:all": "npm run hugo:build && npm run build",
    "build:watch": "npm run build -- --watch",
    "analyze": "npm run build && npx vite-bundle-analyzer",
    "pre-commit": "lint-staged",
    "pre-commit:full": "npm run format && npm run lint && npm run type-check && npm run validate:content && npm run test -- --run",
    "prepare": "husky install",
    "lighthouse": "lhci autorun",
    "validate:authors": "node scripts/validate-authors.cjs",
    "validate:frontmatter": "node scripts/validate-frontmatter.cjs",
    "validate:content": "npm run validate:authors && npm run validate:frontmatter",
    "ci:local": "act -W .github/workflows/gh-pages.yml",
    "ci:test": "act --dryrun",
    "ci:validate": "act --list",
    "ci:security": "act -W .github/workflows/security.yml",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "deps:update": "npm update",
    "deps:outdated": "npm outdated",
    "clean:all": "rm -rf public/ static/js/*.js static/js/*.map node_modules/.cache/ .hugo_build.lock",
    "perf:lighthouse": "lighthouse http://localhost:1313 --output html --output-path ./lighthouse-report.html"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.1.1",
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@tanstack/react-query": "^5.17.15",
    "@tanstack/react-virtual": "^3.0.1",
    "date-fns": "^3.0.6",
    "framer-motion": "^10.18.0",
    "fuse.js": "^7.0.0",
    "lodash-es": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-intersection-observer": "^9.5.3",
    "react-router-dom": "^6.21.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@playwright/test": "^1.40.1",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.0",
    "@types/react": "19.1.2",
    "@types/react-dom": "19.1.2",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^8.0.3",
    "immer": "^10.1.1",
    "jsdom": "^23.2.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "typescript": "<5.9.0",
    "vite": "^6.3.5",
    "vite-bundle-analyzer": "^0.7.0",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,css,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{cjs,mjs}": [
      "prettier --write"
    ],
    "data/authors.json": [
      "node scripts/validate-authors.cjs",
      "prettier --write"
    ],
    "content/posts/*.md": [
      "node scripts/validate-frontmatter.cjs",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
